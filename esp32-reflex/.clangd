CompileFlags:
  # Point clangd at the ESP-IDF-generated compilation database.
  CompilationDatabase: build/
  # Use esp-clang (Espressif's Xtensa-capable clang) as the compiler driver.
  # Install: python3 ~/esp/esp-idf/tools/idf_tools.py install esp-clang
  Compiler: /home/ben/.espressif/tools/esp-clang/esp-18.1.2_20240912/esp-clang/bin/clang++
  # Strip GCC/Xtensa flags that are unknown to clang.
  Remove:
    - -mlongcalls              # Xtensa-GCC form; clang uses -mlong-calls
    - -fno-tree-switch-conversion  # GCC optimizer pass
    - -fstrict-volatile-bitfields  # GCC extension
    - -fno-shrink-wrap             # GCC optimizer pass
