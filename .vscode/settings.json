{
    "cmake.sourceDirectory": [
        "${workspaceFolder}/esp32-face",
        "${workspaceFolder}/esp32-reflex"
    ],
    "cmake.generator": "Ninja",
    "cmake.buildDirectory": "${sourceDir}/build",
    "cmake.configureOnOpen": false,
    "python.testing.pytestArgs": [
        "supervisor"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    "python.analysis.typeCheckingMode": "basic",

    "C_Cpp.clang_format_style": "file",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "/home/ben/.espressif/tools/esp-clang/esp-18.1.2_20240912/esp-clang/bin/clang-tidy",

    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[css]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit"
    }
}
