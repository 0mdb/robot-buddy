{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Supervisor (mock, no hardware)",
            "type": "debugpy",
            "request": "launch",
            "module": "supervisor",
            "args": ["--mock", "--no-face", "--no-vision", "--log-level", "DEBUG"],
            "cwd": "${workspaceFolder}/supervisor",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Supervisor (mock + vision)",
            "type": "debugpy",
            "request": "launch",
            "module": "supervisor",
            "args": ["--mock", "--no-face", "--log-level", "DEBUG"],
            "cwd": "${workspaceFolder}/supervisor",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Supervisor (real hardware)",
            "type": "debugpy",
            "request": "launch",
            "module": "supervisor",
            "args": ["--log-level", "DEBUG"],
            "cwd": "${workspaceFolder}/supervisor",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Supervisor V2 (mock)",
            "type": "debugpy",
            "request": "launch",
            "module": "supervisor_v2",
            "args": ["--mock", "--no-face", "--no-vision", "--log-level", "DEBUG"],
            "cwd": "${workspaceFolder}/supervisor_v2",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Planner Server",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main",
            "cwd": "${workspaceFolder}/server",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Test: Supervisor",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v", "--tb=short"],
            "cwd": "${workspaceFolder}/supervisor",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Test: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "--tb=short"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Dashboard (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/dashboard/src",
            "preLaunchTask": "Run: Dashboard Dev"
        }
    ]
}
