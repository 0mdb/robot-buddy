{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test: Supervisor",
            "type": "shell",
            "command": "just test-supervisor",
            "group": "test",
            "problemMatcher": [],
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Test: Server",
            "type": "shell",
            "command": "just test-server",
            "group": "test",
            "problemMatcher": [],
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Test: All",
            "type": "shell",
            "command": "just test-all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Lint: All",
            "type": "shell",
            "command": "just lint",
            "group": "test",
            "problemMatcher": [
                "$eslint-compact",
                {
                    "owner": "ruff",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.+):(\\d+):(\\d+): (\\w+) (.+)$",
                        "file": 1, "line": 2, "column": 3, "code": 4, "message": 5
                    }
                }
            ],
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Lint: Fix All",
            "type": "shell",
            "command": "just lint-fix",
            "problemMatcher": [],
